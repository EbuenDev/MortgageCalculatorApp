<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/application_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:text="Mortgage Calculator"
        android:textSize="30sp"
        android:fontFamily="@font/helvetica_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:layout_marginStart="25dp"
        android:text="Calculate your loan with ease!"
        android:textSize="18sp"
        android:fontFamily="@font/helvetica_roman"/>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">
            
            <androidx.cardview.widget.CardView
                android:id="@+id/home_button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:background="@drawable/button_active"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    
                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text=" Cash Loan"
                            android:fontFamily="@font/helvetica_roman"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:id="@+id/vehicle_button"
                android:layout_width="150dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp">

                <FrameLayout
                    android:background="@drawable/button_active"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Vehicle Loan"
                            android:fontFamily="@font/helvetica_roman"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="220dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="32dp">


            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:id="@+id/principal_editText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/principal_hint">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:fontFamily="@font/helvetica_roman"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="?attr/textInputFilledStyle"
                android:id="@+id/annualInterest_editText"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:hint="@string/interestRate_hint"
                android:layout_marginTop="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:fontFamily="@font/helvetica_roman" />

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            style="?attr/textInputFilledStyle"
            android:id="@+id/loanTerm_inYears_editText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:hint="@string/yearsPeriod_hint"
            android:layout_marginTop="25dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:fontFamily="@font/helvetica_roman" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:padding="8dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/calculate_button"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                app:cardElevation="0dp"
                app:cardCornerRadius="6dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackground">

                <FrameLayout
                    android:background="@drawable/button_active"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:background="?attr/selectableItemBackground"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Calculate"
                            android:fontFamily="@font/helvetica_roman"
                            android:textSize="22sp"
                            android:textColor="@color/white"
                            android:textAlignment="center"
                            android:layout_centerInParent="true"/>

                    </RelativeLayout>

                </FrameLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </HorizontalScrollView>

    <!--  Loan Result  -->

    <TextView
        android:id="@+id/yourLoan_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginStart="30dp"
        android:textSize="20sp"
        android:text="Your Loan"
        android:fontFamily="@font/helvetica_roman"/>


    <TextView
        android:id="@+id/principal_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginStart="294dp"
        android:text="@string/loanHint"
        android:textSize="17sp"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="650dp"
        android:layout_marginStart="30dp"
        android:text="Principal Amount :"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:id="@+id/interestRate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:layout_marginStart="320dp"
        android:text="@string/interestRateHint"
        android:textSize="17sp"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="680dp"
        android:layout_marginStart="30dp"
        android:text="Annual Interest Rate :"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:id="@+id/periodOfYears_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="710dp"
        android:layout_marginStart="333dp"
        android:text="@string/yearsPeriodHint"
        android:textSize="17sp"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="710dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Period of Years :"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:id="@+id/monthlyPayment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="755dp"
        android:layout_marginStart="290dp"
        android:text="@string/monthlyPaymentHint"
        android:textSize="20sp"
        android:fontFamily="@font/helvetica_roman"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="755dp"
        android:layout_marginStart="30dp"
        android:text="Monthly Payment :"
        android:textSize="20sp"
        android:fontFamily="@font/helvetica_roman"/>

