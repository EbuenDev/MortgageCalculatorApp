<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="25dp">


    <TextView
        android:id="@+id/application_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginStart="25dp"
        android:text="Mortgage Calculator"
        android:textSize="30sp"/>

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/home_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home" />

            <Button
                android:id="@+id/vehicle_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehicle" />

            <Button
                android:id="@+id/others_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Others" />

        </LinearLayout>

    </HorizontalScrollView>

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:id="@+id/principal_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/principal_hint"
        android:layout_marginTop="280dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:id="@+id/annualInterest_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/interestRate_hint"
        android:layout_marginTop="380dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.textfield.TextInputLayout
        style="?attr/textInputFilledStyle"
        android:id="@+id/loanTerm_inYears_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/yearsPeriod_hint"
        android:layout_marginTop="480dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/Calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculatehint_button"
        android:layout_marginTop="570dp"/>

    <TextView
        android:id="@+id/principal_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="670dp"
        android:text="@string/loanHint" />

    <TextView
        android:id="@+id/interestRate_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="700dp"
        android:text="@string/interestRateHint" />

    <TextView
        android:id="@+id/periodOfYears_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="730dp"
        android:text="@string/yearsPeriodHint" />

    <TextView
        android:id="@+id/monthlyPayment_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="790dp"
        android:text="@string/monthlyPaymentHint" />



